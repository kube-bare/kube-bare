ETCD_NAME="{% for item in groups['etcd'] %}{%   if inventory_hostname == item %}{{"etcd" + loop.index|string }}{% endif %}{% endfor %}"

ETCD_INITIAL_CLUSTER="{% for item in groups['etcd'] %}{{"etcd" + loop.index|string + "=https://" + item + ":2380"}}{% if not loop.last %},{% endif %}{% endfor %}"

ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ inventory_hostname }}:2380"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ inventory_hostname }}:2379,https://{{ inventory_hostname }}:4001"

ETCD_DATA_DIR=/var/lib/etcd/default

ETCD_LISTEN_CLIENT_URLS=https://0.0.0.0:2379,https://0.0.0.0:4001
ETCD_LISTEN_PEER_URLS=https://0.0.0.0:2380
ETCD_INITIAL_CLUSTER_STATE=new
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"

ETCD_TRUSTED_CA_FILE="/etc/kubernetes/pki/etcd/ca.crt"
ETCD_CERT_FILE="/etc/kubernetes/pki/etcd/server.crt"
ETCD_KEY_FILE="/etc/kubernetes/pki/etcd/server.key"
ETCD_PEER_TRUSTED_CA_FILE="/etc/kubernetes/pki/etcd/ca.crt"
ETCD_PEER_CERT_FILE="/etc/kubernetes/pki/etcd/peer.crt"
ETCD_PEER_KEY_FILE="/etc/kubernetes/pki/etcd/peer.key"
#ETCD_PEER_CLIENT_CERT_AUTH="true"
#ETCD_CLIENT_CERT_AUTH="true"

